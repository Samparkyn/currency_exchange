<div class="title">
  <h1>Sam's Currency Exchange</h1>
</div>

  <form action="/result" method="post">
    
    <div>
      <p>
    <label for="date">Select Date:</label>
    <select name="date" id="date">
      <% @dates.each do |each| %>
      <option>
        <%= each %>
            <% end %>
      </option>
    </select>
  </p>
    
      <p>
        <label for="amount">Amount:</label>
        <input name="amount" type="number" id="amount">
      </p>
     
      <p>
        <input type='submit' value="Convert" id="convert">
      </p>
 </div>
 
 <div id="right">
     <p>
       <label for="curr_from">Currency From:</label>
       <select name="curr_from" id="curr_from">
          <% @currencies.map do |each| %>
         <option
           value="<%= each %>"><%= each %>
         </option>
         <% end %>
            
       </select>
     </p>

     <p>
       <label for="curr_to">Currency To:</label>
       <select name="curr_to" id="curr_to">
         <% @currencies.map do |each| %>
         <option
          value="<%= each %>"><%= each %>
         </option>
            <% end %>
       </select>
     </p>
   </div>
